<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Report</h1>
    <div class="col-6 offset-3" style="background-color: rgba(91, 87, 87, 0.7); padding: 20px; border-radius: 10px;">
        
    <form action="/allReports" method="post">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="report[title]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="img">Image URL</label>
            <input class="form-control" type="text" id="img" name="report[img]" placeholder="e.g https://example.com/img18.png">
        </div>
        <div class="mb-3">
            <label class="form-label" for="cve">CVE</label>
            <input class="form-control" type="text" id="cve" name="report[cve]" placeholder="e.g CVE-2024-1234">
        </div>
        <div class="mb-3">
            <label class="form-label" for="seviyarity">Severity</label>
            <input class="form-control" type="text" id="seviyarity" name="report[seviyarity]" placeholder="Critical,High,Medium,Low">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="report[description]"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="patch">Patch</label>
            <input class="form-control" type="text" id="patch" name="report[patch]" value="None">
        </div>
        <div class="mb-3">
            <label class="form-label" for="solution">Solution</label>
            <textarea class="form-control" type="text" id="solution" name="report[solution]"></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Post</button>
        </div>
    </form>
    <a class="btn text-light "  style="background-color: black;" href="/allReports">Back</a>   

    </div>
</div>














