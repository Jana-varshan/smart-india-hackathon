<% layout('layouts/boilerplate') %>
    <h1>All Reports</h1>
    <div>
        <a class="btn btn-light mb-3 mt-3" href="/allReports/new">Add a Report </a>
    </div>
        <% for (report of reports) {%>
            <div class="card border border-warning text-light mb-3 " style="background-color: black; border-radius: 20px;">
                <div class="row flex-conatiner ">
                    
                    <div class="col-md-8 " >
                        <div class="card-body">
                            <h5 class="card-title mb-3"><%= report.cve %></h5>
                            <p class="card-text mb-3"><%= report.description %></p>
                            <p class="card-text mb-3">
                                <small class="text-muted "><%= report.cve %></small>
                            </p>
                            <a href="/allReports/<%= report._id %>" class="btn btn-primary mb-5">View</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }%>

    

<style>
    .flex-conatiner{
        display: flex;
        flex-direction: row; /* Arrange items horizontally */
        justify-content: space-between; /* Distribute items evenly with space between */
        align-items: center; /* Align items vertically */
    }
</style>
