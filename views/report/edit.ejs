<% layout('layouts/boilerplate') %>
    
    <div class="row">
        <h1 class="text-center">Edit Report</h1>
        <div class="col-6 offset-3" style="background-color: rgba(166, 161, 161, 0.7); padding: 20px; border-radius: 10px;">            
            <form action="/allReports/<%= report._id %>?_method=PUT" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="report[title]" value="<%= report.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="img">Image URL</label>
                <input class="form-control" type="text" id="img" name="report[image]" value="<%= report.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="cve">CVE</label>
                <input class="form-control" type="text" id="cve" name="report[cve]" value="<%= report.cve %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="seviyarity">Severity</label>
                <input class="form-control" type="text" id="seviyarity" name="report[seviyarity]" value="<%= report.seviyarity %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="report[description]"><%= report.description %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="patch">Patch</label>
                <input class="form-control" type="text" id="patch" name="report[patch]" value="<%= report.patch %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="solution">Solution</label>
                <textarea class="form-control" type="text" id="solution" name="report[solution]" ><%= report.solution %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Save</button>
            </div>
        </form>
        <a class="btn btn-warning" href="/allReports/<%= report._id %>">Back view</a>   
    
        </div>
    </div>
    
    
    