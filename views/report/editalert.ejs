<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit</h1>
  <div class="col-6 offset-3">

    <form action="/allReports/allalert/<%= alert._id %>?_method=PUT" method="post">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="alert[name]" value="<%= alert.name %>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="mail">Mail ID</label>
        <input class="form-control" type="text" id="mail" name="alert[mail]" value="<%= alert.mail %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Severity</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityCritical" name="alert[seviyarity][]" value="critical" <%= alert.seviyarity.includes('critical') ? 'checked' : '' %>>
          <label class="form-check-label" for="severityCritical">Critical</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityHigh" name="alert[seviyarity][]" value="high" <%= alert.seviyarity.includes('high') ? 'checked' : '' %>>
          <label class="form-check-label" for="severityHigh">High</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityMedium" name="alert[seviyarity][]" value="medium" <%= alert.seviyarity.includes('medium') ? 'checked' : '' %>>
          <label class="form-check-label" for="severityMedium">Medium</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityLow" name="alert[seviyarity][]" value="low" <%= alert.seviyarity.includes('low') ? 'checked' : '' %>>
          <label class="form-check-label" for="severityLow">Low</label>
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Update Alert</button>
    </form>
    <a class="btn btn-secondary" href="/allReports/allalert/<%= alert._id %>">Back</a>
  </div>
</div>
