<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Report</h1>

    <form action="/allReports/alert" method="post">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="alert[name]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="mail">Mail ID</label>
        <input class="form-control" type="text" id="mail" name="alert[mail]" placeholder="e.g., example@gmail.com">
      </div>
      <div class="mb-3">
        <label class="form-label" for="severity">Severity</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityCritical" name="alert[seviyarity]" value="critical">
          <label class="form-check-label" for="severityCritical">Critical</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityHigh" name="alert[seviyarity]" value="high">
          <label class="form-check-label" for="severityHigh">High</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityMedium" name="alert[seviyarity]" value="medium">
          <label class="form-check-label" for="severityMedium">Medium</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="severityLow" name="alert[seviyarity]" value="low">
          <label class="form-check-label" for="severityLow">Low</label>
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Create Report</button>
    </form>
    <a class="btn btn-secondary" href="/allReports/allalert">Back</a>
  </div>
